<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fillViewport="true">

        <!-- 使用LinearLayout作為ScrollView的唯一子元素 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/profile_section"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <!-- 可點擊的圖片 -->
                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/chatbot"
                    android:clickable="true"
                    android:focusable="true" /> <!-- 讓圖片變成可點擊的按鈕 -->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center">

                    <!-- 可點擊的用戶名稱 -->
                    <!-- 讓用戶名稱變成按鈕 -->

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/vip_image"
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            android:textAlignment="center"
                            android:text="未登入"
                            android:textColor="@android:color/black"
                            android:layout_weight="2"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/user_id"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/logout_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="登出"
                        android:background="@color/colorPrimary"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:padding="12dp"
                        android:textSize="16sp"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp" />
                    <Button
                        android:id="@+id/login_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="登入"
                        android:background="@color/colorPrimary"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:padding="12dp"
                        android:textSize="16sp"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:visibility="gone" />
                </LinearLayout>

            </LinearLayout>

            <!-- 卡片區域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/health_grid"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:padding="10dp"
                    android:orientation="horizontal">

                    <!-- 卡片：設定 -->
                    <LinearLayout
                        android:id="@+id/cardprime"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="#F9FFB5"
                        android:orientation="vertical"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:padding="16dp"
                        android:gravity="center_horizontal"> <!-- 保證內容水平居中 -->

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:src="@drawable/settings"
                            android:contentDescription="設定圖示" />

                        <TextView
                            android:id="@+id/sleep_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="升級會員"
                            android:textSize="20sp"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:layout_marginTop="20dp"/> <!-- 保證文字在TextView內水平居中 -->

                    </LinearLayout>

                    <!-- 卡片：用戶資料 -->
                    <LinearLayout
                        android:id="@+id/userdata"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="#FAFFCB"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:layout_margin="5dp"
                        android:gravity="center_horizontal"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:src="@drawable/userdata"
                            android:contentDescription="第三方連接圖示" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="用戶資料"
                            android:textSize="20sp"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:layout_marginTop="20dp"/>

                    </LinearLayout>
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:orientation="horizontal">

                    <!-- 卡片：關於我們 -->
                    <LinearLayout
                        android:id="@+id/aboutme"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:background="#FCFFDF"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center_horizontal"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:src="@drawable/about"
                            android:contentDescription="關於我們圖示" />

                        <TextView
                            android:id="@+id/heart_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="關於我們"
                            android:textSize="20sp"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:layout_marginTop="20dp"/>

                    </LinearLayout>

                    <!-- 卡片：幫助與回饋 -->
                    <LinearLayout
                        android:id="@+id/help_feedback_card"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="6dp"
                        android:background="#FEFFF0"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:src="@drawable/message"
                            android:contentDescription="幫助與回饋圖示" />

                        <TextView
                            android:id="@+id/blood_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="幫助與回饋"
                            android:textSize="20sp"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:layout_marginTop="20dp"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout> <!-- 結束內部LinearLayout -->

    </ScrollView> <!-- 結束ScrollView -->

</androidx.constraintlayout.widget.ConstraintLayout>
