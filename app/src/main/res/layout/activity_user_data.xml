<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- 背景圖片 -->
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/chatbot"
        android:scaleType="centerCrop"
        android:alpha="0.06" />

    <!-- 返回按鈕 -->
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:background="@color/colorPrimaryDark"
        android:tint="@color/colorPrimary"
        android:src="@android:drawable/ic_menu_revert"
        android:layout_margin="16dp" />

    <!-- 表單內容 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="個人資料"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- 用戶名稱 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/username_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="用戶名稱"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/username_arrow"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/arrow_right"
                android:layout_gravity="right" />

        </LinearLayout>

        <!-- 電子郵件 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/email_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="帳號"
                android:textSize="20dp" />

        </LinearLayout>

        <!-- 修改密碼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="修改密碼"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/password_arrow"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/arrow_right"
                android:layout_gravity="right" />

        </LinearLayout>

        <!-- 性別 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/gender_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="性別"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/gender_arrow"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/arrow_right"
                android:layout_gravity="right" />

        </LinearLayout>

        <!-- 身高 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/height_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="身高"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/height_arrow"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_gravity="right" />

        </LinearLayout>

        <!-- 體重 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/weight_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="體重"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/weight_arrow"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_gravity="right" />

        </LinearLayout>

        <!-- 生日 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/birthday_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="生日 (yyyy-MM-dd)"
                android:textSize="20dp" />
        </LinearLayout>

        <!-- 頭像 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="頭像"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/userAvatar"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="3"
                android:src="@drawable/chatbot" />

            <Button
                android:id="@+id/btn_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:text="選擇頭像"
                android:textColor="@android:color/black"
                android:textSize="15dp" />

        </LinearLayout>

        <!-- 註冊按鈕 -->
        <Button
            android:id="@+id/save_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:text="更新頭像"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="20dp" />


    </LinearLayout>
</FrameLayout>
